<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_enabled="true" android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" >

		    <solid android:color="@color/defaultBlackButtonPressedColor" />
		
		    <padding
		        android:bottom="@dimen/default_button_padding"
		        android:left="@dimen/default_button_padding"
		        android:right="@dimen/default_button_padding"
		        android:top="@dimen/default_button_padding" />
		
		    <corners
		        android:radius="@dimen/default_button_corner_radius"/>

			<size
				android:width="@dimen/default_button_width"
				android:height="@dimen/default_button_height"/>
		</shape>
    </item>
	<item android:state_enabled="true" android:state_pressed="false">
	    <shape>
	    	<solid android:color="@color/defaultBlackButtonColor" />
		
		    <padding
		        android:bottom="@dimen/default_button_padding"
		        android:left="@dimen/default_button_padding"
		        android:right="@dimen/default_button_padding"
		        android:top="@dimen/default_button_padding" />

			<corners
				android:radius="@dimen/default_button_corner_radius"/>

			<size
				android:width="@dimen/default_button_width"
				android:height="@dimen/default_button_height"/>
		</shape>
	</item>

	<item android:state_enabled="false">
		<shape>
			<corners android:radius="@dimen/default_button_corner_radius"/>
			<solid android:color="@color/defaultBlackButtonDisabledColor"/>
			<padding
				android:bottom="@dimen/default_button_padding"
				android:left="@dimen/default_button_padding"
				android:right="@dimen/default_button_padding"
				android:top="@dimen/default_button_padding" />
			<!-- 大小 -->
			<size
				android:width="@dimen/default_button_width"
				android:height="@dimen/default_button_height"/><!-- 宽度和高度 -->
		</shape>
	</item>
</selector>
