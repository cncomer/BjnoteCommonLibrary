<resources>
    <style name="DefaultShapeButton" parent="Widget.AppCompat.Button">
        <item name="android:minHeight">36dip</item>
        <item name="android:minWidth">60dip</item>
        <item name="android:background">@drawable/default_btn</item>
        <item name="android:textColor">@color/defaultBtnTextColor</item>
        <item name="android:paddingLeft">5dip</item>
        <item name="android:paddingRight">5dip</item>
        <item name="android:paddingTop">2dip</item>
        <item name="android:paddingBottom">2dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="DefaultShapeButton.Borderless">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>
    <style name="DefaultShapeButton.White">
        <item name="android:background">@drawable/default_white_btn</item>
    </style>
    <style name="DefaultShapeButton.Orange">
        <item name="android:background">@drawable/default_orange_btn</item>
    </style>

    <style name="DefaultShapeButton.Red">
        <item name="android:background">@drawable/default_pink_btn</item>
    </style>

    <style name="DefaultShapeButton.Blue">
        <item name="android:background">@drawable/default_blue_btn</item>
    </style>
    <style name="DefaultShapeButton.Green">
        <item name="android:background">@drawable/default_green_btn</item>
    </style>

    <style name="DefaultShapeButton.Black">
        <item name="android:background">@drawable/default_black_btn</item>
    </style>
</resources>
